# ==============================================
# H2O Allegiant Backend - Environment Variables
# ==============================================
# Copy this file to .env and fill in your values

# ==============================================
# Application
# ==============================================
APP_NAME="H2O Allegiant API"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
BACKEND_URL=http://localhost:8000

# ==============================================
# CORS Origins (comma-separated)
# ==============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Database - PostgreSQL
# ==============================================
POSTGRES_USER=h2o_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SERVER=localhost
POSTGRES_PORT=5432
POSTGRES_DB=h2o_allegiant

# Full connection string (auto-generated if not provided)
# DATABASE_URL=postgresql://h2o_user:password@localhost:5432/h2o_allegiant

# ==============================================
# Redis Cache
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# REDIS_URL=redis://:password@localhost:6379/0

# ==============================================
# Security - JWT
# ==============================================
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==============================================
# OpenAI API
# ==============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-5-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# ==============================================
# AWS S3 (File Storage)
# ==============================================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=h2o-allegiant-files

# Use local storage in development (set to true)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./storage

# ==============================================
# File Upload
# ==============================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=.pdf,.docx,.xlsx,.jpg,.png

# ==============================================
# Background Jobs
# ==============================================
# Use 'background' for FastAPI BackgroundTasks or 'celery' for Celery
JOB_BACKEND=background

# Celery (if using)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ==============================================
# Logging
# ==============================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==============================================
# Email (Optional - for notifications)
# ==============================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@h2oallegiant.com

# ==============================================
# Monitoring (Optional)
# ==============================================
# SENTRY_DSN=https://your-sentry-dsn
